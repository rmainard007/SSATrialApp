<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".fullScreenAlarm"
    android:id="@+id/fullScreen"
    android:weightSum="1">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:id="@+id/viewFlipper"
        android:layout_weight="0.33"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:autoStart="true"
        android:flipInterval="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:contentDescription="FullScreenWhite"
            android:src="@drawable/fullscreen_white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:contentDescription="fullScreenBlack"
            android:src="@drawable/fullscreen_black" />
    </ViewFlipper>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Snooze"
        android:id="@+id/snooze"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:onClick="snooze" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Dismiss"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/viewFlipper"
        android:layout_alignEnd="@+id/viewFlipper"
        android:onClick="dismiss"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"/>

</RelativeLayout>
